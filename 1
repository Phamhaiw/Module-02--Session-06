//TIP To <b>Run</b> code, press <shortcut actionId="Run"/> or
// click the <icon src="AllIcons.Actions.Execute"/> icon in the gutter.

import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("nhập số lượng sinh viên");
        int cntStudents = sc.nextInt();
        int currentIndex = 0;
        float[] score = new float[cntStudents];


        do{
            System.out.println("******************QUẢN LÝ ĐIỂM SV****************");
            System.out.println("1. Nhập điểm sinh viên");
            System.out.println("2. In danh sách điểm");
            System.out.println("3. Tính điểm trung bình của các sinh viên");
            System.out.println("4. Tìm điểm cao nhất và thấp nhất");
            System.out.println("5. Đếm số lượng sinh viên đạt và trượt");
            System.out.println("6. Sắp xếp điểm tăng dần");
            System.out.println("7. Tìm điểm");
            System.out.println("8. Thoát");
            System.out.print("Vui lòng chọn chức năng: ");
            int choice = sc.nextInt();
            switch (choice){
                case 1:
                    System.out.println("1. Nhập danh sách điểm sinh viên");
                    int cntScore = sc.nextInt();
                    for (int i =0;  i<cntScore; i++){
                        System.out.printf("Nhập điểm sinh viên thứ %d:", (i+1));
                        score[currentIndex] = sc.nextFloat();
                        currentIndex++;
                    }
                    break;
                case 2:
                    System.out.println("Danh sách điểm sinh viên");
                    for(int i = 0; i< currentIndex; i++ ){
                        System.out.println(score[i]);
                    }
                    break;
                case 3:
                    float sumScore = 0;
                    for(int i=0; i<currentIndex; i++ ){
                        sumScore +=score[i];
                    }
                    System.out.printf("điểm trung bình của sinh viên là %,.2f \n", sumScore/currentIndex);
                    break;
                case 4:
                    float minScore = score[0];
                    float maxScore = score[0];
                    for (int i=0; i<currentIndex; i++ ){
                        if (score[i] > maxScore){
                            maxScore = score[i];
                        }
                        if (score[i] < minScore){
                            minScore = score[i];
                        }
                    }
                    System.out.printf("Điểm cao nhất là %,.1f \n Điểm thấp nhất là %,.1f \n", maxScore, minScore);
                    break;
                case 5:
                    float cntPass = 0;
                    for (int i = 0; i < currentIndex; i++){
                        if(score[i] >= 5){
                            cntPass ++;
                        }
                    }
                    System.out.printf("Số sinh viên đã đạt là %,.1f \n", cntPass);
                    break;
                case 6:
                    for (int i = 0; i < currentIndex - 1; i++){
                        for(int j = 0; j<currentIndex; j++){
                            if(score[i] > score[j]){
                                float temp =  score[j];
                                score[j] = score[i];
                                score[i] = temp;
                            }

                        }
                    }
                    System.out.println("Đã sắp xếp xong");
                    break;
                case 7:
                    System.out.println("Nhập điểm cần tìm:");
                    float findScore = Float.parseFloat(sc.next());
                    float low = 0;
                    float  high = currentIndex -1;
                    while(low <= high) {
                        float mid = + (low + (high - low) / 2);
                        if (mid == findScore){
                            System.out.printf("Tìm thấy phần tử %d có giá trị %.1f \n",mid, findScore);
                        } else if (mid < findScore){
                            low = mid + 1;
                        } else if (mid > findScore){
                            high = mid - 1;
                        } else {System.out.println("Không tìm thấy giá trị");}
                    }
                    break;
                case 8:
                    System.exit(0);

            }
        } while (true);
    }
}




